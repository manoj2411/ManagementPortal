<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to 'ManagementPortal', root_path, class: 'navbar-brand' %>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav navbar-right">

        <% if user_signed_in? %>
          <%= content_tag :li, link_to( 'Tasks', tasks_path), class: "#{ 'active' if current_page?(controller: 'tasks')}" -%>

          <% if current_user.manager? %>
            <li><%= link_to 'Reports', 'javascript:void(0)' %></li>
            <li><%= link_to 'Users', users_path %></li>
          <% end %>
            <%= content_tag :li, link_to( 'Edit Profile', edit_profile_path), class: "#{ 'active' if current_page?(edit_profile_path)}" %>
          <li><%= link_to "Log out (#{current_user.name})", destroy_user_session_path, method: :delete %> </li>
        <% else %>
          <li><%= link_to 'Log in', new_user_session_path %></li>
        <% end %>

      </ul>
    </div>
  </div>
</div>
