<%= simple_form_for @task, html: { class: 'form-horizontal' } do |f| %>

  <%= f.error_notification %>

  <%= f.input :title, input_html: { class: 'form-control'}, placeholder: 'Title' %>
  <%= f.input :description, input_html: { class: 'form-control', rows: 7}, placeholder: 'Description' %>
  <%= f.input :status, collection: ['Pending', 'In progress', 'Completed'], include_blank: false %>
  <%= f.input :priority, collection: ['Low', 'Normal', 'High'], include_blank: false %>

  <%= f.label :due_date %>
  <%= f.datetime_select :due_date, {minute_step: 30, ampm: true} -%>

  <%= f.association :assigned_to, collection: User.data_collection_executive %>

  <br><br>
  <%= f.button :submit, data: {disable_with: 'Saving...'} %>
<% end %>
